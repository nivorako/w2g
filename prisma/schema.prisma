// Prisma schema for SQLite
// Run: npx prisma migrate dev --name init

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  passwordHash  String
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
